{
	"name": "TensorFlow GPU Dev Container",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"USER_NAME": "pablo",
			"USER_UID": "1000"
		}
	},
	"runArgs": [
		"--gpus",
		"all"
	],
	"postCreateCommand": "pip install -e .",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"github.copilot"
			],
			"settings": {
				"python.pythonPath": "/usr/local/bin/python",
				"python.terminal.activateEnvironment": true
			}
		}
	}
}